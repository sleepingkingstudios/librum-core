<% if type == :actions %>
<%= render_actions %>
<% elsif type == :boolean %>
<%= render_boolean %>
<% elsif type == :link %>
<%= render_link %>
<% elsif render_icon? %>
<%=
  render(
    Librum::Core::View::Components::IconText.new(
      class_name: class_name,
      color:      resolve_option(:color),
      contents:   render_value,
      icon:       resolve_option(:icon)
    )
  )
%>
<% else %>
<%= render_value %>
<% end %>
