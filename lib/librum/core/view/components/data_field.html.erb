<% if type == :boolean %>
<%= render_boolean %>
<% elsif type == :link %>
<%= render_link %>
<% elsif render_icon? %>
<%=
  render(
    Librum::Core::View::Components::IconText.new(
      class_name: class_name,
      color:      color,
      contents:   render_value,
      icon:       icon
    )
  )
%>
<% else %>
<%= render_value %>
<% end %>
